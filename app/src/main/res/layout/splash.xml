<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/degradado"
    android:elevation="15dp">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:id="@+id/imgLogo"
        android:background="@drawable/logo9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:elevation="35dp" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:indeterminateDrawable="@drawable/progress_bar_states2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false"
        android:layout_below="@+id/txtCargando"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando.."
        android:id="@+id/txtCargando"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EncontrÃ¡ tu complejo deportivo mas cercano"
        android:id="@+id/txtTituloSplash"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toStartOf="@+id/txtCargando"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>